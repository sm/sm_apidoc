#!/bin/sh

set -v # Turn on verbose logging, so that the following will present a tutorial.

# file(s) module api is loaded with the line 'api/files' in shell/includes.

# We can test if multiple files exist and act according to the result:
if files exist /bin/zsh /bin/bash
then
  log "zsh and bash exist in /bin! "
else
  log "zsh and bash do not exist in /bin! "
fi

